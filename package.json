{
  "name": "devboard",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "postinstall": "node scripts/fix-es-abstract-call.cjs",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://127.0.0.1:5173 && cross-env ELECTRON_START_URL=http://127.0.0.1:5173 electron .\"",
    "build:electron": "cross-env PWA_DISABLE=1 vite build",
    "electron:dist": "npm run build:electron && electron-builder --win --x64",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "node ./node_modules/typescript/bin/tsc --noEmit"
  },
  "main": "electron/main.cjs",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
