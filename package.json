    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "daisyui": "^4.12.14",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "es-abstract": "^1.23.6",
