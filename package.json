    "jalaali-js": "^1.2.8",
    "lucide-react": "^0.563.0",
    "minisearch": "^7.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "react-window": "^2.2.6",
    "recharts": "^3.7.0",
